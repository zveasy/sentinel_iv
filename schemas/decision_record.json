{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Decision Record",
  "description": "First-class decision object: core API output for operators, auditors, and systems.",
  "type": "object",
  "required": [
    "decision_id",
    "timestamp",
    "status"
  ],
  "properties": {
    "decision_id": {
      "type": "string"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "status": {
      "type": "string",
      "enum": [
        "PASS",
        "PASS_WITH_DRIFT",
        "FAIL"
      ]
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "baseline_confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "trigger_metrics": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "action_requested": {
      "type": "string"
    },
    "action_allowed": {
      "type": "boolean"
    },
    "reason": {
      "type": "string"
    },
    "policy_version": {
      "type": "string"
    },
    "config_hash": {
      "type": "string"
    },
    "evidence_ref": {
      "type": "string"
    },
    "run_id": {
      "type": "string"
    },
    "baseline_run_id": {
      "type": "string"
    },
    "correlation_id": {
      "type": "string"
    },
    "extra": {
      "type": "object"
    },
    "schema_version": {
      "type": "string",
      "description": "Schema version e.g. 1.0"
    },
    "decision_confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Composite confidence"
    }
  }
}